---
import { Icon } from "astro-icon/components";
import ContentSection from "~/components/content-section.astro";
import type { FeatureItem } from "~/types";

const features: Array<FeatureItem> = [
  {
    title: "Innovative Web Interfaces",
    description:
      "Transform your online presence with cutting-edge web interfaces that engage users and showcase the vibrant spirit of Alicante.",
    icon: "mdi:palette",
  },

  {
    title: "Dynamic Business Websites",
    description:
      "Boost your business with dynamic websites designed to capture attention and drive engagement in the bustling Alicante market.",
    icon: "mdi:chart-line",
  },

  {
    title: "Mobile-Optimized Design",
    description:
      "Ensure seamless interaction with mobile-optimized designs that provide a flawless browsing experience on any device.",
    icon: "mdi:cellphone",
  },

  {
    title: "Custom Online Stores",
    description:
      "Launch a custom online store that combines visual appeal with top-notch functionality, tailored to the needs of Alicante shoppers.",
    icon: "mdi:shopping",
  },

  {
    title: "Search Engine Success",
    description:
      "Achieve search engine success with websites optimized to enhance visibility and attract organic traffic in Alicanteâ€™s competitive landscape.",
    icon: "mdi:search-web",
  },

  {
    title: "Comprehensive Site Management",
    description:
      "Keep your website running at its best with comprehensive site management services, allowing you to focus on your core business activities.",
    icon: "mdi:settings",
  },
];

---

<ContentSection title="My Services for Alicante" id="service">
  <Fragment slot="lead">
    I offer many services around web design. No matter what you need, I'm here to help. Whether it's a <span class="text-primary">brand-new WordPress</span> site, a fresh design, or just some tweaks to an existing website, I've got you covered.
  </Fragment>
  <ul class="grid max-w-6xl grid-cols-1 md:grid-cols-2 lg:grid-cols-3">
    {
      features.map(({ title, description, icon }) => (
        <li class="flex flex-col items-center gap-4 border border-default bg-offset p-6">
          <div class="size-16 rounded-full border-2 border-current p-3">
            <Icon name={icon} class="size-full" />
          </div>
          <p class="text-center font-extrabold text-xl">{title}</p>
          <p class="text-center text-offset text-sm">{description}</p>
        </li>
      ))
    }
  </ul>
  
</ContentSection>
